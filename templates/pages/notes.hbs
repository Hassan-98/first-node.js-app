<!DOCTYPE html>
<html>
    <head>
        <!-- Encoding -->
        <meta charset="utf-8">
        <!-- Internet Explorer Compatiblity -->
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <!-- Viewport Meta -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Description Meta -->
        <meta name="description" content="page description">
        <!-- Keywords Meta -->
        <meta name="keywords" content="hassan, ali">
        <!-- Author Meta -->
        <meta name="author" content="Hassan Ali">
        <!-- Bootstrap Styles -->
        <link rel="stylesheet" href="css/bootstrap.min.css">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">
        <!-- Google Font -->
        <link href="https://fonts.googleapis.com/css?family=Permanent+Marker|Roboto|Zilla+Slab&display=swap" rel="stylesheet">
        <!-- Page Custom Styles -->
        <link rel="stylesheet" href="css/home.css">
        <!-- Page Icon -->
        <link rel="shortcut icon" href="images/logo.jpg">
        <!-- Page Title -->
        <title>Page Title</title>
    </head>
    <body>
        
        {{>header}}

        <div class="container notes-app">

            <div class="error" v-if="err" v-text="err"></div>

            <div class="allNotes" v-else>
                <div class="note" v-for="note in notes" :key="note._id">
                    <h4 class="title" v-text="note.title"></h4>
                    <hr>
                    <p class="body" v-text="note.body"></p>
                    <button title="Delete" @click="deleteThis($event)" :id="note.id"><i class="far fa-trash-alt" :id="note.id"></i></button>
                </div>
            </div>

            <hr>

            <label>Add A New Note</label>

            <input type="text" placeholder="Note Title" v-model="title" class="noteTitle">
            <textarea rows="3" placeholder="Note Body" v-model="body" class="noteBody"></textarea>
            <button @click="add">Add</button>

        </div>

        {{>footer}}

        <!-- JQuery Library v(3.3.1) -->
        <script src="js/jquery-3.3.1.min.js"></script>
        <!-- Popper JS -->
        <script src="js/popper.min.js"></script>
        <!-- Bootstrap JS v(4.2.1) -->
        <script src="js/bootstrap.min.js"></script>
        <!-- Vue.js v(2.6.1) -->
        <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.min.js"></script>
        <!-- Page Custom Scripts -->
        <script src="js/custom.js"></script>
    </body>
</html>